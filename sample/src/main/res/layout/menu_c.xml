<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" C -> A flags: "
            android:textColor="#1122aa"
            />

        <CheckBox
            android:id="@+id/new_task_checkbox_ca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="NEW_TASK"
            android:textColor="#1122aa"

            />

        <CheckBox
            android:id="@+id/multi_task_checkbox_ca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="MULTI_TASK"
            android:textColor="#1122aa"

            />

        <CheckBox
            android:id="@+id/clear_top_checkbox_ca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="CLEAR_TOP"
            android:textColor="#1122aa"

            />

        <CheckBox
            android:id="@+id/clear_task_checkbox_ca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="CLEAR_TASK"
            android:textColor="#1122aa"

            />

        <CheckBox
            android:id="@+id/single_top_checkbox_ca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="SINGLE_TOP"
            android:textColor="#1122aa"

            />
    </LinearLayout>

